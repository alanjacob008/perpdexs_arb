# Hyperliquid API Configuration
# To get your API key: https://app.hyperliquid.xyz/ -> More -> API
# You'll receive a private key (wallet) - store it here
HYPERLIQUID_PRIVATE_KEY=your_private_key_here
HYPERLIQUID_ACCOUNT_ADDRESS=your_account_address_here
HYPERLIQUID_IS_MAINNET=false

# Lighter API Configuration
# Contact Lighter support or check their docs for API key creation
LIGHTER_API_KEY=your_lighter_api_key_here
LIGHTER_API_SECRET=your_lighter_api_secret_here
LIGHTER_WALLET_ADDRESS=your_wallet_address_here

# Trading Configuration (optional defaults)
DEFAULT_SLIPPAGE_PERCENT=0.5
MAX_POSITION_SIZE_USD=1000
MIN_SPREAD_PERCENT=0.1

